{
  "terminal.integrated.profiles.windows": {
    "Next Front-end": {
      "path": "PowerShell",
      "args": [
        "-NoExit",
        "-Command",
        "cd '${workspaceFolder}/next-front-end'; pnpm dev --turbo"
      ]
    },
    "Nestjs Back-end": {
      "path": "PowerShell",
      "args": [
        "-NoExit",
        "-Command",
        "cd '${workspaceFolder}/nestjs-back-end'; pnpm start:dev"
      ]
    }
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "VsCodeTaskButtons.showCounter": true,
  "VsCodeTaskButtons.tasks": [
    {
      "label": "$(play) Start Next Server",
      "task": "Start Next Server",
      "tooltip": "Start Front-end server"
    },
    {
      "label": "$(play) Start Nest Server",
      "task": "Start Nestjs Server",
      "tooltip": "Run Back-end server"
    },
    {
      "label": "$(play) Start Both Servers",
      "task": "Start Both Servers",
      "tooltip": "Start both servers"
    }
  ]
}
